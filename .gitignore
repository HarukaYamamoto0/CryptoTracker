# Gradle configuration and cache files
.gradle/                # Gradle cache directory
local.properties        # Local configuration file (e.g., SDK path)

# Build output directories
/build/
.externalNativeBuild/   # Native build artifacts
.cxx/                   # Native code intermediate files
captures/               # Screenshots and screen recordings

# Android Studio generated files
.DS_Store               # macOS system file
.idea/                  # IntelliJ/Android Studio project settings
.idea/caches/
.idea/libraries/
.idea/modules.xml
.idea/workspace.xml
.idea/navEditor.xml
.idea/assetWizardSettings.xml
misc.xml
deploymentTargetDropDown.xml
render.experimental.xml

# IntelliJ module files
*.iml                  # IntelliJ module files generated automatically

# Build output files
*.apk                  # APK files
output.json            # Output metadata for builds

# Log and profiling files
*.log                  # Log files
*.hprof                # Profiling files generated by Android Studio

# Keystore (certificates)
*.jks                  # Java keystore files
*.keystore             # Android keystore files

# Google services files
google-services.json   # Firebase and Google APIs configuration

